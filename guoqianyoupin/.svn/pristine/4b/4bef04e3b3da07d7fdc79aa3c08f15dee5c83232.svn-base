.seckill-theme {
  background: #fff;
  text-align: center;
  padding: 2.6667vw 0;
  .theme {
    margin-bottom: 1.3333vw;
    font-weight: bold;
    .icon {
      .inB();
      width: 4.2667vw;
      height: 4.5333vw;
      img {
        width: 100%;
        height: auto;
      }
    }
    .title {
      font-size: 4.8vw;
      color: @red;
      vertical-align: middle;
    }
  }
  .time-wrapper {
    .flex-box();
    align-items: center;
    justify-content: center;
    .label {
      font-size: 2.9333vw;
      margin-right: 1.3333vw;
    }
    .countdown {
      .flex-box();
      align-items: center;
      font-size: 3.4667vw;
      color: #fff;
      span {
        margin-left: 1.3333vw;
        .fc();
        width: 5.6vw;
        height: 4.8vw;
        font-weight: bold;
        .radius(0.5333vw);
        background: #000;
      }
    }
  }
}