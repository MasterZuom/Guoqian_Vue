.account-page {
  font-size: 4vw;
  .main,
  .attach {
    background: #fff;
  }
  .item {
    padding: 1.3333vw 4vw;
    .flex-box();
    align-items: center;
    justify-content: space-between;
    position: relative;
    min-height: 13.3333vw;
    .line-top();
    .avatar {
      width: 14.9333vw;
      height: 14.9333vw;
      border-radius: 100%;
      border: @1px solid #f5f5f5;
      overflow: hidden;
      img {
        width: 100%;
        height: auto;
      }
    }
    .content {
      .flex-box();
      align-items: center;
      input {
        text-align: right;
        width: 100%;
        height: 100%;
      }
    }
  }
  .attach {
    margin-top: 2.1333vw;
    .content {
      color: #CCC;
    }
  }
}