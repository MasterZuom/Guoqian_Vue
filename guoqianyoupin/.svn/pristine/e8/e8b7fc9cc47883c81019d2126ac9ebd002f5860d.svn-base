.order-page.comment-page {
  .comment-wrapper {
    padding: 4.8vw 2.6667vw 5.3333vw;
    background: #fff;
    margin-top: 1.3333vw;
    .grade-wrapper {
      .flex-box();
      align-items: center;
      .label {
        font-size: 4vw;
      }
      .stars {
        flex: 1;
        .flex-box();
        justify-content: flex-end;
        .icon {
          font-size: 4.6667vw;
          margin-left: 1.3333vw;
        }
        .icon-star-full {
          color: @red !important;
        }
        .icon-star-empty {
          color: #999;
        }
      }
    }
    .input-comment {
      padding-top: 4vw;
      textarea {
        width: 100%;
        height: 20vw;
        font-size: 3.7333vw;
        line-height: 5.333vw;
      }
      .text-length {
        padding-top: 1.3333vw;
        display: block;
        font-size: 3.2vw;
        text-align: right;
        color: #999;
      }
    }
  }
  .upload-wrapper {
    margin-top: 1.3333vw;
    background: #fff;
    font-size: 4vw;
    .imgs-wrapper {
      .flex-box();
      padding-top: 2.9333vw;
      .img-item {
        position: relative;
        width: 15.2vw;
        height: 15.2vw;
        margin-right: 2.6667vw;
        img {
          .max-img();
        }
        .remove {
          .flex-box();
          justify-content: center;
          align-items: center;
          width: 8vw;
          height: 8vw;
          position: absolute;
          color: red;
          right: -25%;
          top: -25%;
          i {
            font-size: 4vw;
            background: #fff;
            border-radius: 100%;
          }
        }
      }
      .upload-btn {
        border: @1px dashed #A6A6A6;
        width: 15.2vw;
        height: 15.2vw;
        margin-right: 2.6667vw;
        text-align: center;
        color: #999;
        img {
          margin-top: 2vw;
          width: 7.0667vw;
          height: 5.7333vw;
        }
        span {
          flex: 1;
          width: 100%;
          font-size: 2.6667vw;
          display: inline-block;
        }
      }
    }
  }
}