}

//———————————————————————— input check-box ————————————————————————
.check-box {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-box-pack: center;

  .wrap {
    display: inline-block;
    position: relative;
    color: #e4e4e4;
    font-size: 0.3733333333rem;
  }

  input {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 9;
    left: 0;
    top: 0;
    opacity: 0;
  }

  i.fa-check-circle {
    color: #e94045;
  }
}

