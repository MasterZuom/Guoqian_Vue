//———————————————————————— tab view ————————————————————————
.tab-wrapper {
  .flex-box();
  .column();

  .tab-nav {
    .flex-box();
    align-items: center;
    height: 7.4667vw;
    background: #fff;
  }

  .tab-btn {
    .flex-box();
    justify-content: center;
    flex: 1;
    height: 100%;

    &.active {
      color: #24C3BE;

      span {
        position: relative;
      }

      span::before {
        content: "";
        display: inline-block;
        position: absolute;
        width: 100%;
        height: 0.5333vw;
        background: #24C3BE;
        bottom: 0;
        left: 0;
      }
    }
  }
}

//———————————————————————— 模态框 ————————————————————————
.onePxLine() {
  content: "";
  display: block;
  position: absolute;
  background: @color;
}

.line-top(@color: #EAEAEA, @value: 1px) {
  &::before {
    .onePxLine();
    top: 0;
    right: 0;
    width: 100%;
    height: 1px;
    transform: scale(1, .5);
  }
}

.line-bottom(@color: #EAEAEA, @value: 1px) {
  &::before {
    .onePxLine();
    bottom: 0;
    right: 0;
    width: 100%;
    height: @value;
    transform: scale(1, .5);
  }
}

.line-left(@color: #EAEAEA, @value: 1px) {
  &::before {
    .onePxLine();
    top: 0;
    left: 0;
    width: @value;
    height: 100%;
    transform: scale(.5, 1);
  }
}

.line-right(@color: #EAEAEA, @value: 1px) {
  &::before {
    .onePxLine();
    top: 0;
    left: 0;
    width: @value;
    height: 100%;
    transform: scale(.5, 1);
  }
}

//———————————————————————— 模态框 ————————————————————————
.imodal {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1050;
  overflow: hidden;
  -webkit-overflow-scrolling: touch;
  outline: 0; // background-color: rgba(0, 0, 0, .5);

  .mask-block {
    z-index: -1;
  }

  .dialog-header {
    position: relative;

    .close-btn {
      position: absolute;
      right: 0;
      top: 0;
      display: block;
      width: 6.6667vw;
      height: 6.6667vw;
      .flex-box();
      align-items: center;
      justify-content: center;

      .icon {
        font-size: 2.1333vw;
      }
    }
  }
}

//———————————————————————— 中线标题 ————————————————————————
.label-title {
  font-size: 3.2vw;
  text-align: center;

  &:after,
  &:before {
    display: inline-block;
    content: '';
    width: 37.3333vw;
    height: 1px;
    vertical-align: middle;
    background-color: #DCDCDC;
    transform: scale(1, .5);
  }

  &:before {
    margin-right: 3.2vw;
  }

  &:after {
    margin-left: 3.2vw;
  }
}

//———————————————————————— 数量加减组件 ————————————————————————
.num-bar {
