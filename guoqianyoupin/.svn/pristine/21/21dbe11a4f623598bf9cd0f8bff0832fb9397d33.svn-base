.invite-list-page {
  .invite-list {
    .item {
      padding: 0 3.7333vw;
      position: relative;
      height: 16vw;
      .flex-box();
      align-items: center;
      .line-bottom();
      &:first-child {
        &::after {
          display: block;
          content: "";
          position: absolute;
          background: #eaeaea;
          top: 0;
          right: 0;
          width: 100%;
          height: 1px;
          transform: scale(1, 0.5);
        }
      }
      .info {
        padding-bottom: 1.8667vw;
        font-size: 3.7333vw;
        display: block;
      }
      .time {
        font-size: 2.9333vw;
        color: #999;
      }
    }
  }
}