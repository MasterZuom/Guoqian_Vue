.order-page.after-sale {
  .options-wrapper {
    margin-top: 1.3333vw;
    height: 13.6vw;
    background-color: #fff;
    padding: 0 2.6667vw;
    font-size: 4vw;

    .item {
      .flex-box();
      justify-content: space-between;
      align-items: center;
      position: relative;
      height: 100%;

      select {
        position: absolute;
        left: 0;
        right: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        z-index: 9;
      }

      .right {
        color: #999;
      }
    }

    .mark {
      width: 60%;
      height: 100%;

      .content {
        padding: 1.3333vw;
        width: 100%;
        height: 100%;
        font-size: 1.6vw;
        line-break: 3vw;
        color: #999;
      }
    }
  }

  .return-wrapper {
    height: 17.0667vw;

    .price {
      flex: 1;
      color: @red;
      text-align: right;
    }

    .right {
      max-width: 60%;
      .flex-box();
      flex-wrap: wrap;
      justify-content: flex-end;
    }

    .describe {
      display: block;
      padding-top: 1.3333vw;
      font-size: 3.2vw;
    }
  }

  .upload-wrapper {
    margin-top: 1.3333vw;
    padding: 3.4667vw 2.6667vw 4vw;
    background: #fff;
    font-size: 4vw;

    .imgs-wrapper {
      .flex-box();
      padding-top: 2.9333vw;

      .img-item {
        position: relative;
        width: 15.2vw;
        height: 15.2vw;
        margin-right: 2.6667vw;
        border: @1px solid #f1f1f1;

        img {
          .max-img();
        }

        .remove {
          .flex-box();
          justify-content: center;
          align-items: center;
          width: 8vw;
          height: 8vw;
          position: absolute;
          color: red;
          right: -25%;
          top: -25%;

          i {
            font-size: 4vw;
            background: #fff;
            border-radius: 100%;
          }
        }
      }

      .upload-btn {
        border: @1px dashed #A6A6A6;
        width: 15.2vw;
        height: 15.2vw;
        margin-right: 2.6667vw;
        text-align: center;
        color: #999;

        img {
          margin-top: 2vw;
          width: 7.0667vw;
          height: 5.7333vw;
        }

        span {
          flex: 1;
          width: 100%;
          font-size: 2.6667vw;
          display: inline-block;
        }
      }
    }
  }

  .after-sale-info {
    padding: 4vw 2.6667vw;
    font-size: 3.2vw;
    line-height: 4.2667vw;
    color: #999;
  }
}

.after-sale-submit {
  .submit-btn {
    .flex-box();
    width: 100%;
    height: 12.8vw;
    justify-content: center;
    align-items: center;
    font-size: 4.2667vw;
    color: #fff;
    background-color: @red;
  }
}