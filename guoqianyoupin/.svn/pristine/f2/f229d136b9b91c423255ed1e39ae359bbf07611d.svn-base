.pay-page {
  .pay-wrapper {
    .price-item {
      margin-top: 2.4vw;
      .flex-box();
      align-items: center;
      justify-content: space-between;
      padding: 0 4vw;
      height: 14.4vw;
      font-size: 4vw;
      background-color: #fff;
      .content {
        color: @red;
      }
    }
    .pay-methods {
      .block-title {
        display: block;
        font-size: 3.4667vw;
        padding: 2.6667vw 4vw;
      }
      .types {
        padding: 0 4vw;
        background-color: #fff;
      }
      .item {
        height: 12vw;
        .flex-box();
        justify-content: space-between;
        align-items: center;
        .label {
          font-size: 0;
        }
        img {
          width: 6.6667vw;
          .inB();
        }
        .title {
          .inB();
          padding-left: 3.2vw;
          font-size: 4vw;
        }
        .content {
          .icon {}
          .icon-check {
            color: #BFBFBF;
          }
          .icon-checked {
            color: @red;
          }
        }
      }
    }
  }
  .sub-btn {
    .fc();
    width: 100%;
    height: 12.8vw;
    font-size: 4.2667vw;
    color: #fff;
    background-color: @red;
  }
  .pay-done {
    text-align: center;
    .icon-status {
      padding-top: 13.3333vw;
      .icon {
        font-size: 14.6667vw;
        color: @blue;
      }
    }
    .msg {
      padding-top: 4.8vw;
      font-size: 5.3333vw;
    }
    .price {
      padding: 3.2vw 0 4vw;
      font-size: 5.3333vw;
      span {
        font-size: 4vw
      }
    }
    .status {
      color: #999;
      font-size: 4vw
    }
    .handles {
      padding-top: 14.6667vw;
      width: 67.6vw;
      margin: 0 auto;
    }
    .ui-btn {
      height: 11.7333vw;
      font-size: 4.8vw;
      .fc();
      margin-bottom: 3.2vw;
    }
    .btn-order {
      color: #fff;
      background-color: @blue;
    }
    .btn-index {
      border: @1px solid #333;
    }
  }
}