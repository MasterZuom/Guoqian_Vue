/* base style */
* {
  margin: 0;
  padding: 0;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}
@font-face {
  font-family: "medium";
  src: url('../fonts/medium.ttf') format('truetype');
}
html {
  height: 100%;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
body {
  font-family: Helvetica, "PingFang-SC-Medium", "Helvetica Neue", "微软雅黑", Tahoma, Arial, sans-serif;
  font-size: 14px;
  line-height: normal;
  color: #333;
  height: 100%;
}
[v-cloak] {
  display: none;
}
a {
  color: #333;
}
a,
img {
  border: 0;
  outline: none;
  text-decoration: none;
}
a:focus,
a:hover {
  text-decoration: none;
  color: #333;
}
li {
  list-style: none;
}
p {
  margin: 0;
}
br {
  height: 0;
  width: 0;
  line-height: 0;
}
div,
p,
span,
a {
  line-height: 100%;
}
.height-full {
  height: 100%;
}
.clear-fix:after,
.clear-fix:before {
  display: table;
  content: " ";
  clear: both;
  visibility: hidden;
  overflow: hidden;
}
