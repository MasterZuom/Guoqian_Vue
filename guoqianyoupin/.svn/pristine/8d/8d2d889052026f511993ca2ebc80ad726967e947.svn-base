.ui-align {
  text-align: center;
}
textarea {
  resize: none;
}
.float-right {
  float: right;
}
.float-left {
  float: left;
}
.cart-list {
  background: #eee;
}
.cart-list .no-item {
  text-align: center;
  padding: 40px 0;
}
.cart-list .item {
  display: flex;
  border-bottom: 1px solid #e4e4e4;
  background: #fff;
}
.cart-list .item .check-box .warp {
  width: auto;
  height: auto;
}
.cart-list .item .check-box i {
  padding: 0.2666666667rem;
}
.cart-list .item .goods-img {
  width: 2.4rem;
  height: 2.4rem;
  border: 1px solid #f0f0f0;
  margin: 0.2666666667rem 0;
}
.cart-list .item .img-wrap {
  padding-top: 100%;
  position: relative;
}
.cart-list .item .description {
  padding-left: 10px;
  font-size: 0.3rem;
}
.cart-list .item .description .price {
  color: #e94045;
  font-size: 0.35rem;
}
.cart-list .item .description .num {
  position: absolute;
  right: 0.4rem;
  top: auto;
  font-size: 12px;
}
.cart-list .item .info-wrap {
  margin: 0.2666666667rem 0;
  flex: 1;
  font-size: 0.35rem;
  color: #666;
}
.cart-list .item .info-wrap .name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.cart-list .item .edit-done {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-box-pack: center;
  width: 1.20rem;
  /* 90/75 */
  text-align: center;
  color: #fff;
  background-color: #f46f2d;
}
.cart-list .item .num-wrap {
  text-align: center;
  padding: 0 20px;
}
.cart-list .item .num-wrap .num-bar {
  display: flex;
}
.cart-list .item .num-wrap input {
  flex: 1;
}
.cart-list .item .handle-btn {
  display: block;
  padding: 5px 0.4rem;
  margin-top: 5px;
}
.cart-list .item .handle-btn i {
  font-size: 0.3rem;
}
.cart-bottom-bar {
  font-size: 0.35rem;
  color: #666;
}
.cart-bottom-bar .left {
  flex: 1;
  padding: 0 0.2666666667rem;
  display: flex;
}
.cart-bottom-bar .left .check-box {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-box-pack: center;
}
.cart-bottom-bar .left .info {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-box-pack: center;
  flex: 1;
  text-align: right;
}
.cart-bottom-bar .right {
  width: 2.8rem;
}
.cart-bottom-bar .price {
  color: #e94045;
  font-size: 0.4rem;
}
