//商品详情
@import 'color';
@import 'bs';

.series_detail {
	.series-info {
		.img-wrap {
			position: relative;
			width: 100%;
			padding-top: 100%;
			background-color: #f7f8f8;
		}
	}

	.series-title {
		padding: 0 0.4rem;
		color: #051b28;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		-webkit-box-pack: center;
		height: 1.4rem;
		overflow: hidden;
		word-break: break-all;
	}

	.label-title {
		height: 1.2rem;
		line-height: 1.2rem;
		background-color: #e6e9ef;
	}

	.series-intro {
		margin: 10px;
		border: 0;
		overflow: hidden;

		.simditor-body {
			padding: 0;
		}
	}

	.goods-list {
		margin-top: 15px;
	}
}
