.order-page {
  background: #F4F4F4;

  .order-list {
    padding-bottom: 4vw;

    .order-item {
      margin-top: 2.1333vw;
    }
  }

  .order-item {
    background-color: #fff;

    .order-header {
      position: relative;
      .flex-box();
      align-items: center;
      justify-content: space-between;
      height: 10.6667vw;
      padding: 0 2.6667vw;
      .line-bottom();

      .order-number {
        font-size: 3.2vw;
        color: #999;
      }

      .order-state {
        font-size: 3.2vw;
        color: #C61A1A;
      }
    }

    .order-footer {
      padding: 3.4667vw 2.6667vw 0;
      min-height: 10.6667vw;

      .statistics {
        font-size: 3.4667vw;
      }

      .handles {
        .flex-box();
        justify-content: flex-end;
        padding: 4vw 0;

        .order-btn {
          .flex-box();
          align-items: center;
          justify-content: center;
          margin-left: 1.0667vw;
          min-width: 18.2667vw;
          height: 6.4vw;
          font-size: 3.2vw;
          border: @1px solid #D3D3D3;
          border-radius: 3.2vw;
        }
      }
    }
  }
}

.order-item {
  .goods-item {
    position: relative;
    padding: 2.6667vw;
    .flex-box();
    .line-bottom();

    .cover {
      overflow: hidden;
      position: relative;
      flex: 0 0 18.1333vw;
      height: 18.1333vw;
      border: @1px solid #EAEAEA;

      img {
        .max-img();
      }
    }

    .info {
      flex: 1 1 0;
      padding-left: 2.9333vw;
      width: 70%;

      .name {
        font-size: 4vw;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }

      .sku {
        display: block;
        padding: 1.6vw 0 4vw;
        font-size: 3.2vw;
        color: #999;

        span {
          padding-right: 5px;
        }
      }

      .price {
        display: block;
        font-size: 4vw;
      }
    }

    .handles {
      position: absolute;
      right: 2.6667vw;
      bottom: 0;
      font-size: 3.2vw;

      .order-btn {
        padding-bottom: 1vw;
        display: block;
        color: #2CC7BC;
      }
    }
  }
}

.logistics-view {
  height: 80vh;
  width: 80%;
  border-radius: 2.6667vw;
}