.questions-page {
  .item {
    margin-top: 2.1333vw;
    padding: 2.6667vw 3.7333vw 0;
    background-color: #fff;

    .goods-item {
      padding: 0;

      &::before {
        display: none;
      }
    }

    .questions-item {
      position: relative;
      padding: 4.8vw 0;
      //height: 23.2vw;
      font-size: 3.5vw;
      line-height: 5vw;
      .line-bottom();

      .line-1 {
        .flex-box();

        .icon {
          margin-right: 1.6vw;
          display: block;
          flex: 0 0 5vw;
          height: 5vw;

          img {
            width: 100%;
            height: auto;
          }
        }

        .content {
          width: 90%;
        }

        .time {
          width: 23vw;
          font-size: 2.9333vw;
          color: #999;
          justify-content: flex-end;
        }
      }

      .line-q {
        //padding-bottom: 6.1333vw;
      }

    }
  }
}

/* 发布咨询 */
.consultation-page {
  .add-btn {
    .fc();
    position: absolute;
    right: 2.6667vw;
    bottom: 6.1333vw;
    width: 10.6667vw;
    height: 6.4vw;
    background-color: #c61a1a;
    border-radius: 6vw;

    .icon {
      font-size: 4vw;
      color: #fff;
    }
  }

  .input-control {
    padding: 4vw;
    width: 100%;
    min-height: 40vw;
    font-size: 3.4667vw;
    line-height: 5.3333vw;
  }
}